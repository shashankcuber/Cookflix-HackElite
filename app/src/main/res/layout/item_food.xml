<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:strokeWidth="@dimen/dp_1"
    app:strokeColor="@color/stroke_color"
    app:cardCornerRadius="@dimen/dp_8"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginStart="@dimen/dp_8"
    android:layout_marginEnd="@dimen/dp_8"
    android:layout_marginBottom="@dimen/dp_16" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/gray_800"
        android:layout_height="@dimen/news_card_item_height">

        <ImageView
            android:id="@+id/iv_food_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:scaleType="fitXY"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_food_title"
            style="@style/Text.SubHeader.1.Poppins.16"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_food_thumbnail"
            app:layout_constraintWidth_percent="0.75"
            tools:text="Chicken Sandwich" />

        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_difficulty_medium"
            style="@style/Text.SubHeader.2.Poppins.12.White"
            android:padding="@dimen/dp_4"
            app:drawableEndCompat="@drawable/ic_baseline_star_24"
            android:layout_marginEnd="@dimen/dp_12"
            app:layout_constraintTop_toTopOf="@id/tv_food_title"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Medium"/>

        <TextView
            android:id="@+id/tv_dish_origin"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.5"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            style="@style/Text.SubHeader.2.Poppins.12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_food_title"
            tools:text="Mexican"/>

        <TextView
            android:id="@+id/tv_dish_cost"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.35"
            android:layout_marginEnd="@dimen/dp_12"
            style="@style/Text.SubHeader.2.Poppins.12.Black400"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="textEnd"
            app:layout_constraintTop_toBottomOf="@id/tv_food_title"
            tools:text="2$ for two people"/>

        <TextView
            android:id="@+id/tv_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            style="@style/Text.SubHeader.2.Poppins.10.Black400"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_dish_origin"
            tools:text="Bread, Eggs, Ketchup, Chicken"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>